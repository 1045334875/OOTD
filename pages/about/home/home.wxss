.UCenter-bg {
  background-color: pink;
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 130rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color:rgb(224, 221, 214);
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

/* .UCenter-bg text {
  opacity: 0.8;
} */

 .UCenter-bg image {
  width: 240rpx;
  height: 240rpx;
} 

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 150rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}